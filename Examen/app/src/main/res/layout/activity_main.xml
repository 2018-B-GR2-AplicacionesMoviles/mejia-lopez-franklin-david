<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <Button
                android:text="Mostrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentTop="true"
                android:layout_marginTop="87dp" android:layout_alignStart="@+id/botonregistrar"
                android:id="@+id/botonmostrar"/>
        <Button
                android:text="Registrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/botonregistrar"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" android:layout_marginStart="132dp"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>